<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="16.0" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.bloodwiing.tarotdb.controllers.SettingsController">
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
   <children>
      <HBox alignment="BASELINE_LEFT" spacing="8.0">
         <children>
            <Label maxWidth="1.7976931348623157E308" minWidth="-Infinity" text="Tarot DB Settings" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#onSave" text="Save" />
            <Button layoutX="531.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCancel" styleClass="gray" text="Cancel" />
         </children>
      </HBox>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="list" VBox.vgrow="ALWAYS">
         <content>
            <VBox alignment="TOP_CENTER" spacing="16.0">
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
               <children>
                  <Label styleClass="accent" text="Deck Art">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <HBox fx:id="hboxDecks" spacing="24.0" />
               </children>
            </VBox>
         </content>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ScrollPane>
   </children>
</VBox>
